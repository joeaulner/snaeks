{
  "name": "snaks",
  "version": "1.0.0",
  "main": "index.js",
  "repository": "https://github.com/pancakeCaptain/snaks.git",
  "author": "Joe Aulner <joseph.aulner@aviture.us.com>",
  "license": "MIT",
  "scripts": {
    "static": "copyfiles -u 1 -e '**/*.elm' 'src/*' 'src/**/*' out",
    "elm": "elm-make src/Snaeks.elm --output out/scripts/snaeks.js --yes",
    "uglify": "uglifyjs out/scripts/snaeks.js --compress --mangle --output out/scripts/snaeks.js",

    "static:watch": "nodemon --exec 'yarn static' -L --watch src -e html,css",
    "elm:watch": "nodemon --exec 'yarn elm' -L --watch src -e elm",

    "build": "mkdir -p out/scripts && run-s static elm uglify",
    "build:watch": "run-p static:watch elm:watch",

    "serve": "serve out",
    "start": "run-p build:watch serve",

    "docker:build": "docker build --no-cache -t snaeks .",
    "docker:start": "docker run --entrypoint yarn -v $(pwd)/src:/opt/snaeks/src -v $(pwd)/out:/opt/snaeks/out -p 5000:5000 snaeks start",
    "deploy": "now --public --docker"
  },
  "now": {
    "name": "snaeks",
    "alias": "snaeks",
    "files": [
      "package.json",
      "yarn.lock",
      "elm-package.json",
      "src"
    ],
    "env": {
      "NODE_ENV": "production"
    }
  },
  "dependencies": {
    "copyfiles": "1.2.0",
    "elm": "0.18.0",
    "npm-run-all": "4.0.2",
    "serve": "5.1.5",
    "uglify-js": "3.0.15"
  },
  "devDependencies": {
    "nodemon": "1.11.0"
  }
}
